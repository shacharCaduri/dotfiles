#!/usr/bin/env bash
# Comprehensive Development Environment Setup Script

# Ensure script is executable
chmod +x "$0"

# Fail on any error and enable debugging
set -euo pipefail

# Color Output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Logging Functions
log() {
    echo -e "${GREEN}[SETUP]${NC} $1"
}

warn() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

error() {
    echo -e "${RED}[ERROR]${NC} $1"
    exit 1
}

# Detect Package Manager
detect_package_manager() {
    local MANAGERS=("apt" "brew" "pacman" "yum" "dnf")
    for PM in "${MANAGERS[@]}"; do
        if command -v "$PM" &> /dev/null; then
            echo "$PM"
            return 0
        fi
    done
    error "No supported package manager found"
}

# Install System Dependencies
install_system_deps() {
    local PACKAGE_MANAGER="$1"
    log "Installing system dependencies..."
    
    case "$PACKAGE_MANAGER" in
        apt)
            sudo apt update
            sudo apt install -y \
                curl \
                git \
                zsh \
                build-essential \
                software-properties-common
            ;;
        brew)
            brew update
            brew install \
                curl \
                git \
                zsh \
                gcc
            ;;
        pacman)
            sudo pacman -Syu --noconfirm
            sudo pacman -S --noconfirm \
                curl \
                git \
                zsh \
                base-devel
            ;;
        yum|dnf)
            sudo "$PACKAGE_MANAGER" update -y
            sudo "$PACKAGE_MANAGER" groupinstall -y "Development Tools"
            sudo "$PACKAGE_MANAGER" install -y \
                curl \
                git \
                zsh
            ;;
        *)
            error "Unsupported package manager: $PACKAGE_MANAGER"
            ;;
    esac
}

# Setup Development Tools
setup_dev_environment() {
    log "Setting up development environment..."
    
    # Pyenv
    if ! command -v pyenv &> /dev/null; then
        curl https://pyenv.run | bash
    fi
    
    # Rust
    if ! command -v rustup &> /dev/null; then
        curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
    fi
    
    # Poetry
    if ! command -v poetry &> /dev/null; then
        curl -sSL https://install.python-poetry.org | python3 -
    fi
}

# Link Dotfiles
link_dotfiles() {
    local DOTFILES_DIR="${1:-$HOME/dotfiles}"
    
    log "Linking dotfiles from $DOTFILES_DIR..."
    
    # List of dotfiles to link
    local DOTFILES=(
        "$DOTFILES_DIR/shell/.zshrc"
        "$DOTFILES_DIR/git/.gitconfig"
        "$DOTFILES_DIR/shell/.p10k.zsh"
    )
    
    for file in "${DOTFILES[@]}"; do
        if [ -f "$file" ]; then
            ln -sf "$file" "$HOME/.$(basename "$file")"
            log "Linked $(basename "$file")"
        else
            warn "Dotfile not found: $file"
        fi
    done
}

# Run Specific Environment Setups
run_environment_setups() {
    # Run shell setup script
    if [ -f "$HOME/dotfiles/shell/install-zsh" ]; then
        "$HOME/dotfiles/shell/install-zsh"
    fi
}

# Main Installation Function
main() {
    local DOTFILES_DIR="${1:-$HOME/dotfiles}"
    
    log "Starting comprehensive development environment setup..."
    
    # Detect package manager
    PACKAGE_MANAGER=$(detect_package_manager)
    
    # Install system dependencies
    install_system_deps "$PACKAGE_MANAGER"
    
    # Setup development environment
    setup_dev_environment
    
    # Link dotfiles
    link_dotfiles "$DOTFILES_DIR"
    
    # Run environment-specific setups
    run_environment_setups
    
    log "Development environment setup complete!"
    log "Please restart your terminal or run 'zsh' to apply changes."
}

# Execute main function with optional dotfiles directory
main "$@"
